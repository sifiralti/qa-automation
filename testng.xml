<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="QA Suite" verbose="1">
    <listeners>
        <listener class-name="com.qa.listeners.TestListener"/>
    </listeners>

    <test name="API Smoke">
        <classes>
            <class name="api.tests.HealthCheckTest"/>
        </classes>
    </test>

    <test name="UI Smoke">
        <classes>
            <class name="ui.tests.LoginTest"/>
        </classes>
    </test>
</suite>
